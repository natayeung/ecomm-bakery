<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Basket | N-2 Bakery</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css"
          integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
</head>

<body>

{{> header}}

<main class="container">
    <div class="row mt-3">

        <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span>Your Basket</span>
            <span class="badge bg-secondary rounded-pill">{{^userBasket}}
                0{{/userBasket}}{{#userBasket}}{{itemCount}}{{/userBasket}}</span>
        </h4>
        <div class="table-responsive">
            <table class="table">
                <thead>
                <tr>
                    <th>Item</th>
                    <th class="text-center">Qty</th>
                    <th class="text-end">Subtotal</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {{#userBasket.items}}
                    <tr>
                        <td id="title-{{productId}}">{{itemTitle}}</td>
                        <td class="text-center" id="quantity-{{productId}}">{{quantity}}</td>
                        <td class="text-end" id="total-{{productId}}">{{itemTotal}}</td>
                        <td class="text-center">
                            <form name="form-remove-item-{{productId}}" method="post" action="/basket/delete">
                                <input type="hidden" name="_csrf" value="{{_csrf.token}}">
                                <button name="item-to-remove" type="submit" class="btn btn-light btn-sm"
                                        value="{{productId}}">Remove
                                </button>
                            </form>
                        </td>
                    </tr>
                {{/userBasket.items}}
                </tbody>
                <tfoot>
                <tr>
                    <th colspan="2">Total (&pound)</th>
                    <th class="text-end">{{^userBasket}}0{{/userBasket}}
                        {{#userBasket}}{{totalPrice}}{{/userBasket}}</th>
                    <th></th>
                </tr>
                </tfoot>
            </table>
        </div>
    </div>
    <div class="row my-3">
        <h4 class="mb-3">Delivery Address</h4>
        <form name="form-delivery-address" class="needs-validation" novalidate method="post" action="/order">
            <input type="hidden" name="_csrf" value="{{_csrf.token}}">
            <div class="row g-3">
                <div class="col-8">
                    <label for="address-line1" class="form-label">Address Line 1*</label>
                    <input type="text" class="form-control" id="address-line1" name="addressLine1"
                           {{#user}}value="{{address.addressLine1}}"{{/user}} required>
                    <div class="invalid-feedback">
                        Address line 1 required.
                    </div>
                </div>
                <div class="col-8">
                    <label for="address-line2" class="form-label">Address Line 2</label>
                    <input type="text" class="form-control" id="address-line2" name="addressLine2"
                           {{#user}}value="{{address.addressLine2}}"{{/user}}>
                </div>
                <div class="col-6">
                    <label for="postcode" class="form-label">Post Code*</label>
                    <input type="text" class="form-control" id="postcode" name="postcode"
                           {{#user}}value="{{address.postcode}}"{{/user}} required>
                    <div class="invalid-feedback">
                        Post code required.
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <button name="complete-order" class="btn btn-secondary btn-md my-3" type="submit">Complete Order
                    </button>
                </div>
            </div>
        </form>
    </div>
</main>

{{> footer}}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0"
        crossorigin="anonymous"></script>
<script src="/js/form-validation.js"></script>
</body>
</html>